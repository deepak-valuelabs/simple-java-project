pipeline {
  agent any
  stages {
    stage('checkout the code') {
      steps {
        checkout scm
      }
    }
    stage ("build my code") {
      steps {
        sh "mvn compile"
        sh "mkdir /var/lib/jenkins/deepak"
      }
    }
    stage ("test my code") {
      when {
      expression {
        env.Testrun == "true"
        }
      }
      steps {
        sh "mvn test"
      }
    }
    stage ("package my code") {
      steps {
        sh "mvn package"
      }
    }
  }
}
