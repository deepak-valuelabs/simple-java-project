pipeline {
  agent {
    docker { image 'maven:3-alpine' }
  stages {
    stage('checkout the code') {
      steps {
        checkout scm
      }
    }
    stage ("build my code") {
      steps {
        echo "running compile for my code"
        sh "mvn compile"
      }
    }
    stage ("test my code") {
      steps {
        script {
          if (Testrun == "true") {
            sh "mvn test"
            }
            else {
              echo "test is not enabled"
             }
          }
       }
    }
    stage ("package my code") {
      steps {
        sh "mvn package"
      }
    }
  }
}
